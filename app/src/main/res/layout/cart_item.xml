<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="17sp"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/cart_rv_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_launcher_background" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll1"
            android:layout_toRightOf="@+id/cart_rv_img"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="0dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cart_food_name"
                android:text="Spacy Fresh crab"
                android:fontFamily="@font/lato_bold"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cart_food_price"
                android:text="255"
                android:textSize="25dp"
                android:textColor="#15BE77"
                android:fontFamily="@font/lato_bold"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cart_ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cart_minus"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:textColorHighlight="#A9FFFFFF"
                android:background="@drawable/btn_back"
                android:backgroundTint="#15BE77"
                android:text="-"
                android:textSize="20dp"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cart_count"
                android:text="1"
                android:layout_marginLeft="8dp"
                android:textSize="20dp"
                android:fontFamily="@font/lato_bold"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cart_plus"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:textColorHighlight="#A9FFFFFF"
                android:background="@drawable/btn_back"
                android:backgroundTint="#15BE77"
                android:text="+"
                android:textSize="20dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cart_delete"
            android:layout_below="@+id/cart_ll2"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="23dp"
            android:src="@drawable/delete_icon_svg_09876789"
            android:backgroundTint="@color/white"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
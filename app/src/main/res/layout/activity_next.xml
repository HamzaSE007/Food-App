<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Next_Activity">

    <ImageView
        android:id="@+id/img_next"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/next_pic"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/title_Splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_next"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/koho_bold_italic"
        android:gravity="center_horizontal"
        android:text="Enjoy Restaurant Quality\nMeals at Home"
        android:textAlignment="center"
        android:textColor="#359639"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/creator_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/koho"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:text="Â©Design By\nHamza"
        android:textAlignment="center"
        android:textColor="#24AD58"
        android:textSize="20sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="157dp"
        android:layout_height="57dp"
        android:layout_above="@+id/creator_next"
        android:gravity="center"
        android:text="Next"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:fontFamily="@font/koho"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/btn_bg"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".PlaceOrderSplash_Activity">

    <TextView
        android:id="@+id/congrate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/artifika"
        android:gravity="center_horizontal"
        android:text="Congrate\nYour Order Placed"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/splash_placeOrder"
        android:layout_below="@+id/congrate_tv"
        android:src="@drawable/splashtxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="167dp"
        android:layout_height="60dp"
        android:id="@+id/backHome_btn"
        android:layout_below="@+id/splash_placeOrder"
        android:layout_marginTop="50dp"
        android:text="Go Home"
        android:elevation="5dp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:textSize="29sp"
        android:textColor="@color/white"
        android:fontFamily="@font/koho_medium_italic"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/btn_bg"
        />


</RelativeLayout>